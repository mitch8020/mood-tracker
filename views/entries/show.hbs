<div class="row">
  <div class="col s12 m8">
    <h3> {{entry.mood}}
      <small>{{{editIcon entry.user user entry._id false}}}</small>
    </h3>
    <div class="card story">
      <div class="card-content">
        <span class="card-title">{{formatDate date "MM/D/YY, h:mm a"}}</span>
      {{{entry.body}}}
      </div>
    </div>
  </div>
  <div class="col s12 m4">
    <div class="card center-align">
      <div class="card-content">
        <span class="card-title">{{entry.user.displayName}}</span>
        <img src="{{entry.user.image}}" alt="user image" class="circle responsive-img img-small">
      </div>
      <div class="card-action">
        <a href="/entries/user/{{entry.user._id}}">More From {{entry.user.firstName}}</a>
      </div>
    </div>
  </div>
</div>
