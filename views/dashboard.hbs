<h5>Dashboard</h5>
<h3>Welcome {{name}}</h3>
<p>Here are your entries:</p>
{{#if entries}}
  <table class="striped">
    <thead>
      <tr>
        <th>Mood</th>
        <th>Date</th>
        <th>Notes</th>
        <th>Edit / Delete</th>
      </tr>
    </thead>
    <tbody>
      {{#each entries}}
        <tr>
          <td><a href="/entries/{{_id}}">{{mood}}</a></td>
          <td>{{formatDate createdAt "M/D/YY, h:mm a"}}</td>
          <td><span class="dash-status">{{stripTags (truncate body 150)}}</span></td>
          <td>
            <a href="/entries/edit/{{_id}}" class="btn btn-float">
              <i class="fas fa-edit"></i>
            </a>
            <form action="/entries/{{_id}}" method="POST" id="delete-form">
              <input type="hidden" name="_method" value="DELETE">
              <button type="submit" class="btn red">
                <i class="fas fa-trash"></i>
              </button>
            </form>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p>You have not added any entries.</p>
{{/if}}